generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String 
  age       Int
  city      String
  todos     Todos[]
}

model Todos{
  id         Int        @id @default(autoincrement())
  user_id     Int       
  title       String 
  description String
  done        Boolean   @default(false)
  user        User      @relation(fields: [user_id], references: [id])
}